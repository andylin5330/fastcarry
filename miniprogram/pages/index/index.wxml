<view class="container">
  
  <!-- Gradient Header -->
  <view class="header-section">
    
    <!-- Optional: Add Location or Welcome Text here if needed, but per visual just header -->
  </view>

  <!-- Floating Content Card -->
  <view class="main-card">
    
    <!-- Banner Section -->
    <view class="banner-wrapper">
      <swiper autoplay indicator-dots circular indicator-color='rgba(255,255,255,0.6)' indicator-active-color="#1eb1f7" interval='3000' class="swiper-box">
        <swiper-item>
          <image src="cloud://cloud1-1g75i69o3bf03886.636c-cloud1-1g75i69o3bf03886-1394854433/banner/redbook.png" mode="widthFix" class="banner-img" />
        </swiper-item>
        <swiper-item>
          <image src="cloud://cloud1-1g75i69o3bf03886.636c-cloud1-1g75i69o3bf03886-1394854433/banner/tiktok.png" mode="widthFix" class="banner-img" />
        </swiper-item>
        <swiper-item>
          <image src="cloud://cloud1-1g75i69o3bf03886.636c-cloud1-1g75i69o3bf03886-1394854433/banner/wechat.png" mode="widthFix" class="banner-img" />
        </swiper-item>
      </swiper>
    </view>

    <!-- Navigation Grid -->
    <view class="nav-grid">
      <van-grid column-num="4" border="{{ false }}">
        <block wx:for="{{ gridItems }}" wx:key="text">
          <van-grid-item use-slot>
             <view class="grid-icon-box">
               <van-icon name="{{item.icon}}" size="56rpx" color="{{item.color}}" />
               <text class="grid-text">{{item.text}}</text>
             </view>
          </van-grid-item>
        </block>
      </van-grid>
    </view>

     <!-- Main Connect Buttons (Sender/Carrier) -->
    <view class="role-actions">
       <view class="role-card carrier-card" bindtap="navigateToCarrier" hover-class="card-hover">
          <view class="role-icon-bg">
            <van-icon name="logistics" color="#fff" size="50rpx" />
          </view>
          <view class="role-info">
            <text class="role-title">我是带货人</text>
            <text class="role-desc">发布行程 赚取收益</text>
          </view>
          <van-icon name="arrow" color="#fff" size="30rpx" class="arrow-icon" />
       </view>

       <view class="role-card sender-card" bindtap="navigateToSender" hover-class="card-hover">
          <view class="role-icon-bg">
            <van-icon name="bag" color="#fff" size="50rpx" />
          </view>
          <view class="role-info">
            <text class="role-title">我是需带货</text>
            <text class="role-desc">快速寄送 安全抵达</text>
          </view>
          <van-icon name="arrow" color="#fff" size="30rpx" class="arrow-icon" />
       </view>
    </view>

  </view>
</view>
