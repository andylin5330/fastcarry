/* Global */
.container {
  min-height: 100vh;
  background-color: #f7f8fa;
}

/* Header Background (Blue) */
.header-bg {
  background-color: #1eb1f7;
  height: 250rpx;
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 1;
  border-bottom-left-radius: 120rpx;
  border-bottom-right-radius: 120rpx;
}

/* Banner Wrapper */
.banner-wrapper {
  padding: 20rpx;
  padding-top: 40rpx; /* Push down relative to container */
  position: relative;
  z-index: 2;
  margin-bottom: 20rpx;
}

.swiper-box {
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(30, 177, 247, 0.3);
}

.banner-img {
  width: 100%;
  height: 100%;
  display: block;
}

/* Navigation Grid */
.nav-grid {
  background-color: #fff;
  margin: 0 20rpx 30rpx;
  padding: 20rpx 0;
  border-radius: 20rpx;
  position: relative;
  z-index: 2;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

.grid-icon-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
}

.grid-text {
  font-size: 26rpx;
  color: #333;
}

/* Main Action Cards */
.main-actions {
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  position: relative;
  z-index: 2;
}

.action-card {
  flex: 1;
  height: 160rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  color: #fff;
  box-shadow: 0 6rpx 15rpx rgba(0,0,0,0.1);
}

.action-title { font-size: 32rpx; font-weight: bold; }
.action-desc { font-size: 22rpx; opacity: 0.9; }

.carrier {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.sender {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}
