
page{
  height: 100%;
  background-color: #fff; /* Changed to white */
}

/* --- Original Login Styles (Preserved) --- */
.login-area{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.login-area .btn{
  width: 200rpx;
  height: 200rpx;
  border-radius: 500%;
  background-color: #5cb85c;
  color: white;
  
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.user-area{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.user-area image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 500%;
}
.user-area .name{
  font-size: 30rpx;
  padding: 30rpx 0;
}

.user-area .logout{
  color: #a94442;
}


/* --- Original Top View (Likely unused now via wx:else replacement, but kept just in case) --- */
.top-view{
  background-color: #01ccb6;

  color: white;
  padding: 40rpx;
}

.top-view .user{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.top-view .user .row{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.top-view .user .avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.top-view .user .name{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding-left: 20rpx;
}
.top-view .user .name navigator{
  padding: 0 5rpx;
}

.top-view .site{
  background-color: rgba(0, 0, 0, 0.16);
  padding: 20rpx;
  border-top-left-radius: 32rpx;
  border-bottom-left-radius: 32rpx;
}

.top-view .numbers{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 40rpx;
  padding-bottom: 0rpx;
}

.top-view .numbers .row{
   display: flex;
  flex-direction: column;
  align-items: center;
}

.container1 {
  padding: 20rpx;
}
.main{
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon-view{
  display: flex;
  flex-direction: column;
  margin-bottom: 50rpx;
}

.app-icon {
  width: 100rpx;
  height: 100rpx;
  margin: 40rpx auto 20rpx; /* 上边距为40rpx，下边距为20rpx，左右居中 */
}

.quick-login-header {
  display: flex;
  align-items: center;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.divider {
  height: 20rpx;
}

.login-option {
  font-size: 28rpx;
  color: #333333;
}

.login-option .van-cell__icon {
  color: #07c160;
}

.agreement-container {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.checkbox {
  margin-right: 10rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: #666666;
}

.agreement-link {
  font-size: 24rpx;
  color: #07c160;
}


/* --- NEW Vant Profile Styles --- */

.profile-container {
  padding-top: 0; 
}

/* Header Card */
.header-card {
  background: linear-gradient(135deg, #1eb1f7, #6149f6);
  padding: 60rpx 40rpx 101rpx; /* Increased bottom padding for overlap */
  color: #fff;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.avatar-shadow {
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.2);
  border: 4rpx solid rgba(255,255,255,0.8);
}

.text-info {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.8;
  background: rgba(0,0,0,0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

/* VIP & Points Bar - Floating overlap */
.vip-bar {
  margin: -60rpx 32rpx 30rpx; /* Reduced overlap slightly */
  background-color: #f1e4c3; 
  border-radius: 12rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center; /* Center the single item */
  position: relative;
  z-index: 10;
  box-shadow: 0 4rpx 12rpx rgba(163, 139, 94, 0.1);
}

.vip-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.vip-icon {
  font-size: 44rpx;
  font-weight: 800;
  color: #a38b5e;
  font-family: "Times New Roman", Times, serif;
  font-style: italic;
  margin-right: -4rpx;
}

.vip-label {
  font-size: 30rpx;
  color: #a38b5e;
  font-weight: 500;
}

.vip-value {
  font-size: 30rpx;
  font-weight: 600;
  color: #a38b5e;
}

.bar-divider {
  width: 1rpx;
  height: 40rpx;
  background-color: rgba(163, 139, 94, 0.3);
}

/* Wallet Card */
.wallet-card {
  margin: 0 32rpx 40rpx;
  background-color: #fff;
  border: 1rpx solid #f0f0f0;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.card-header {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f8f8f8;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
}

.wallet-content {
  display: flex;
  padding: 40rpx 0;
}

.wallet-sub-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.wallet-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 16rpx;
}

.wallet-label {
  font-size: 26rpx;
  color: #333;
}

/* Menu */
.menu-card {
  margin-bottom: 40rpx;
}

.logout-area {
  position: relative;
  padding: 0 40rpx;
  padding-bottom: 40rpx;
  margin-bottom: 60rpx;
}
