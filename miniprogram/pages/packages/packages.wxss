/* Global Background matching Carrier */
.container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

/* Tab Content Padding */
.content-area {
  padding-top: 20rpx;
}

/* Card Wrap for spacing */
.card-wrap {
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.02);
  border-radius: 12rpx;
  overflow: hidden;
}

/* Date text in footer */
.date-text {
  font-size: 24rpx;
  color: #999;
  float: left;
  margin-top: 10rpx;
}
