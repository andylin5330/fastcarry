.container {
    padding: 40rpx 0;
    background-color: #f7f8fa;
    min-height: 100vh;
}

.header-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 60rpx 40rpx;
    background: #fff;
    margin-bottom: 30rpx;
}

.cs-image {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 40rpx;
}

.title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 16rpx;
}

.subtitle {
    font-size: 28rpx;
    color: #999;
}

.action-area {
    padding: 0 40rpx;
    margin-bottom: 60rpx;
}

.faq-section {
    margin-top: 20rpx;
}