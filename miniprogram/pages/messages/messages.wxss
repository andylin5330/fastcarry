.container {
  padding: 30rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.form-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.02);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  border-left: 8rpx solid #1eb1f7;
  padding-left: 15rpx;
  line-height: 1;
}

.header-card {
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.02);
}
