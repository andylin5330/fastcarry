<view class="container">
  <view class="wallet-header">
    <view class="balance-title">账户余额 (元)</view>
    <view class="balance-amount">{{balance}}</view>
  </view>

  <view class="action-card">
    <van-cell-group inset>
      <van-cell title="充值" is-link icon="balance-pay" border="{{ false }}" />
    </van-cell-group>
  </view>

  <view class="transaction-list">
    <view class="section-title">交易记录</view>
    <view class="empty-state" wx:if="{{transactions.length === 0}}">
      <van-image width="200rpx" height="200rpx" src="/images/no_message_placeholder.png" opacity="0.5" />
      <view class="empty-text">暂无交易记录</view>
    </view>
    <view class="list-content" wx:else>
      <!-- Transaction items would go here -->
    </view>
  </view>
</view>
