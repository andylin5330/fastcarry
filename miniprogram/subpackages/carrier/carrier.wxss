/* Global Background */
.container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

/* Custom Nav */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-content {
  display: flex;
  align-items: center;
  position: relative;
  padding: 0 20rpx; 
}

.back-btn {
  position: absolute;
  left: 30rpx; /* Adjust based on capsule position */
  font-size: 50rpx;
  line-height: 1;
  padding: 10rpx 20rpx;
}

.nav-title {
  width: 100%;
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
}

/* Form Cards */
.form-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.02);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #1eb1f7;
  padding-left: 15rpx;
}

.section-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.use-saved-link {
  font-size: 24rpx;
  color: #1eb1f7;
  display: flex;
  align-items: center;
}

.use-saved-link van-icon {
  margin-right: 4rpx;
}

/* Space Type */
.radio-group-spaced {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}

/* Conditional Area */
.conditional-area {
  margin-top: 20rpx;
  background: #fcfcfc;
  padding: 20rpx;
  border-radius: 12rpx;
}

.divider {
  height: 1rpx;
  background-color: #eee;
  margin-bottom: 20rpx;
}

.volume-row {
  margin-top: 20rpx;
}

.volume-label {
  font-size: 28rpx;
  color: #646566;
  margin-bottom: 15rpx;
  display: block;
}

.chips-container {
  display: flex;
  gap: 20rpx;
}

.chip {
  padding: 10rpx 25rpx;
  background: #f0f0f0;
  color: #666;
  border-radius: 30rpx;
  font-size: 26rpx;
  border: 1px solid transparent;
}

.chip.active {
  background: #e6f7ff;
  color: #1eb1f7;
  border-color: #1eb1f7;
  font-weight: bold;
}

.tips {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* Address Save Status */
.save-status {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.action-area {
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

/* Wizard Styles */
.wizard-container {
  background-color: #ffffff;
  min-height: calc(100vh - 100rpx);
  display: flex;
  flex-direction: column;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.02);
  margin-top: 20rpx;
}

.step-content {
  flex: 1;
  padding: 40rpx 20rpx;
}

.step-view {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.wizard-actions {
  padding: 40rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* Quick Options */
.quick-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 10rpx 32rpx 30rpx 32rpx;
}

.city-tag {
  padding: 8rpx 16rpx !important;
  font-size: 26rpx !important;
}

.volume-tag {
  margin-right: 16rpx !important;
}
