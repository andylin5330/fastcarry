<view class="container">
  <!-- Journey Section -->
  <view class="form-card">
    <view class="section-title">旅程信息</view>
    <van-cell-group border="{{ false }}">
      <van-cell title="航班号" value="{{ order.flightNo }}" border="{{ false }}" />
      <van-cell title="路线" value="{{ order.route }}" border="{{ false }}" />
      <van-cell title="状态" border="{{ false }}">
        <view slot="right-icon">
          <van-tag type="primary">{{ order.status }}</van-tag>
        </view>
      </van-cell>
    </van-cell-group>
  </view>

  <!-- Items Section -->
  <view class="form-card">
    <view class="section-title">物品信息</view>
    <van-cell-group border="{{ false }}">
      <van-cell title="重量" value="{{ order.weight }}KG" border="{{ false }}" />
      <van-cell title="分类" value="{{ order.senderNote || '普货' }}" border="{{ false }}" />
      <van-cell title="备注" label="{{ order.note || '无' }}" border="{{ false }}" />
    </van-cell-group>
  </view>

  <!-- Recipient Section -->
  <view class="form-card">
    <view class="section-title">收件信息 (带货人提供)</view>
    <van-cell-group border="{{ false }}">
      <van-cell title="带货号" value="{{ order.carryingNo }}" border="{{ false }}" title-style="color: #666;" />
      <van-cell title="收件人" value="{{ order.recipientName }}" border="{{ false }}" />
      <van-cell title="联系方式" value="{{ order.recipientPhone }}" border="{{ false }}" />
      <van-cell title="收件地址" label="{{ order.recipientAddress }}" border="{{ false }}" />
    </van-cell-group>
  </view>

  <!-- Tracking Section -->
  <view class="form-card" style="margin-bottom: 120rpx;">
    <view class="section-title">状态追踪</view>
    <view class="steps-container">
      <van-steps
        steps="{{ steps }}"
        active="{{ activeStep }}"
        direction="vertical"
        active-color="#1eb1f7"
      />
    </view>
  </view>

  <!-- Bottom Actions -->
  <view class="bottom-actions">
    <van-button 
      type="primary" 
      block 
      round 
      bind:click="onContactCarrier"
      color="linear-gradient(to right, #1eb1f7, #6149f6)"
    >
      <van-icon name="chat-o" style="margin-right: 10rpx;" />
      联系带物人
    </van-button>
  </view>

  <van-dialog id="van-dialog" />
</view>
