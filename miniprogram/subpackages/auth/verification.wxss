.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 20rpx;
  color: #333;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
  margin-top: 16rpx;
  text-align: center;
}

.upload-area {
  padding: 30rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-tip {
  font-size: 24rpx;
  color: #ccc;
  margin-top: 16rpx;
}

.action-area {
  margin-top: 60rpx;
  padding: 0 40rpx;
}

.security-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 30rpx;
  gap: 8rpx;
}
